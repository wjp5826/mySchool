<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@mipmap/login_bg"
              android:gravity="center_horizontal"
              android:orientation="vertical">

    <TextView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:padding="10dp"
        android:text="我的九职"
        android:textSize="40sp"
        />

    <com.wrapp.floatlabelededittext.FloatLabeledEditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        >

        <EditText
            android:id="@+id/login_user_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="你的学号"
            android:inputType="number"
            android:maxLength="9"
            android:maxLines="1"
            android:textColor="#f1e6e6"
            android:textColorHint="#f1e6e6"/>
    </com.wrapp.floatlabelededittext.FloatLabeledEditText>

    <com.wrapp.floatlabelededittext.FloatLabeledEditText
        android:layout_width="300dp"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/login_user_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="你的学工系统密码"
            android:inputType="textPassword"
            android:maxLength="20"
            android:maxLines="1"
            android:textColor="#f1e6e6"
            android:textColorHint="#f1e6e6"/>
    </com.wrapp.floatlabelededittext.FloatLabeledEditText>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:orientation="horizontal"
        >

        <com.wrapp.floatlabelededittext.FloatLabeledEditText
            android:layout_width="100dp"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/login_user_checkcode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="验证码"
                android:inputType="number"
                android:maxLength="5"
                android:maxLines="1"
                android:textColor="#f1e6e6"
                android:textColorHint="#f1e6e6"
                />
        </com.wrapp.floatlabelededittext.FloatLabeledEditText>

        <ImageView
            android:id="@+id/login_user_checkcode_img"
            android:layout_width="100dp"
            android:layout_height="70dp"/>

        <CheckBox
            android:id="@+id/login_user_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="记住密码"
            android:textColor="#f1e6e6"
            />
    </LinearLayout>

    <Button
        android:id="@+id/login_user_login"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/shape_corner_button"
        android:text="登录"
        android:textColor="#f1e6e6"
        android:textSize="20sp"
        />

    <TextView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="注意：你所登录的账号、密码均为学工系统登录使用。不是教务系统的账号密码。"
        android:textColor="#f1eaea"
        />
</LinearLayout>